<h1>Listing organizations</h1>

<%= form_tag organizations_path, :method => :get do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search Near", :name => nil %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>NTEE</th>
    <th>Address</th>
    <th>Zip</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.name %></td>
    <td><%= organization.ntee_code %></td>
    <td><%= organization.address %></td>
    <td><%= organization.zip_code %></td>
    <td><%= organization.latitude %></td>
    <td><%= organization.longitude %></td>
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
    <td><%= link_to 'Destroy', organization, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Organization', new_organization_path %>
